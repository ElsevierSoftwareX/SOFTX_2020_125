/* === Custom JavaScripts === */

// Update the file transfer table.
function updateFileTransferTable() {
	// Init.
	r = 0;
	// Insert new task.
	$.get("scripts/actions.php?ad_type=getFileTransferTable", function(r) {
		// If result retrieved
		if(r != 0) {
			// Get task ID from storage.
			$('#div_contents_main').html(r);
		}
	});
}

// Update the query server div.
function update_div_query_server() {
	// Get currently selected IFO.
	var ifo = document.getElementById("ifo").value;
//	var dq_flag = document.getElementById("dq_flag").value;
	// Init.
	r = 0;
	// Insert new task.
	$.get("scripts/actions.php?ad_type=update_div_query_server&ifo=" +  ifo + "&dq_flag=", function(r) {
		alert('here' + );
		// If result retrieved
		if(r != 0) {
			// Re-write form.
			$('#div_query_server').html(r);
		}
	});
}

